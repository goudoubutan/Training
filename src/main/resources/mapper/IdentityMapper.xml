<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.zx.mapper.IdentityMapper">

    <resultMap type="com.csqf.zx.DO.IdentityDO" id="TbIdentityMap">
        <result property="typeid" column="typeid" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="identityList" resultMap="TbIdentityMap">
        select
            typeid,typename
        from tb_identity
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbIdentityMap">
        select
            typeid,name
        from tb_identity
        <where>
            <if test="typeid != null">
                and typeid = #{typeid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tb_identity
        <where>
            <if test="typeid != null">
                and typeid = #{typeid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="typeid" useGeneratedKeys="true">
        insert into tb_identity(name)
        values (#{name})
    </insert>

    <insert id="insertBatch" keyProperty="typeid" useGeneratedKeys="true">
        insert into tb_identity(name)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="typeid" useGeneratedKeys="true">
        insert into tb_identity(name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name})
        </foreach>
        on duplicate key update
name = values(name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tb_identity
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where typeid = #{typeid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_identity where typeid = #{typeid}
    </delete>

</mapper>

